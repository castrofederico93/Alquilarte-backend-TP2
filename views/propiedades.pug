doctype html
html
  head
    title Lista de Propiedades
    link(rel="stylesheet", href="/css/styles.css")
    link(rel="stylesheet", href="/css/propiedades.css")
    
  body

    h1 Lista de Propiedades

    if propiedades.length
      table(border='1' cellpading='5' cellspacing='0')
        thead 
          tr 
            th ID 
            th Direccion
            th Tipo 
            th Estado 
            th Ambientes
            th Superficie
            th Descripcion
            th Precio
            th Observaciones
            th Acciones
          tbody 
            each propiedad in propiedades 
              tr 
                td #{propiedad._id}
                td #{propiedad.direccion}
                td #{propiedad.tipo}
                td #{propiedad.estado}
                td #{propiedad.ambientes}
                td #{propiedad.superficie}
                td #{propiedad.descripcion}
                td #{propiedad.precio}
                td #{propiedad.observaciones}
                td
                  button(
                    type="button",
                    onclick="editarPropiedad(this)"
                    data-id=propiedad._id,
                    data-direccion=propiedad.direccion,
                    data-tipo=propiedad.tipo,
                    data-estado=propiedad.estado,
                    data-ambientes=propiedad.ambientes,
                    data-superficie=propiedad.superficie,
                    data-descripcion=propiedad.descripcion,
                    data-precio=propiedad.precio,
                    data-observaciones=propiedad.observaciones, 
                   ) Editar
                  button(type="button", onclick="eliminarPropiedad(this.dataset.id)" data-id=propiedad._id) Eliminar


    else
      p No hay tareas para mostrar.

button(type="button", onclick="toggleform('formCrearPropiedad')") Agregar nueva propiedad

form#formCrearPropiedad(method="POST", action="/propiedades", onsubmit="event.preventDefault(); guardarPropiedad()")
  input(type="hidden", name="id", id="propiedadId") 
  input(type="hidden", name="method", id="methodField", value="POST") 
  

  p(style="font-size: 12px; color: gray") (*) Campo obligatorio
  label(for="direccion") Direccion: *
  input(type="text", name="direccion", id="direccion", required)
   
  label(for="tipo") Tipo: *
  input(type="text", name="tipo", id="tipo", required)

  label(for="estado") Estado: *
  input(type="text", name="estado", id="estado", required)
   

  label(for="ambientes") Ambientes: *
  input(type="text", name="ambientes", id="ambientes", required)
   
  label(for="superficie") Superficie: *
  input(type="superficie", name="superficie", id="superficie", required)
   
  label(for="descripcion") Descripcion: *
  input(type="text", name="descripcion", id="descripcion", required)
 
   
  label(for="precio") Precio: *
  input(type="text", name="precio", id="precio", required)
   
  label(for="observaciones") Observaciones: 
  input(name="observaciones", id="observaciones")

  button(type="submit") Guardar 
  button(type="button", onclick="limpiarFormulario()") Limpiar

  script(src="/js/propiedades.js")
   

   

   

